import React, { useState } from 'react';

const SqlConverter = () => {
  const [input, setInput] = useState('');
  const [output, setOutput] = useState('');

  const convertSql = () => {
    const blocks = input.split(/COMMIT\s*;?/i).filter(Boolean);
    let finalOutput = '';

    blocks.forEach((block) => {
      const lines = block.trim().split('\n');
      let tableName = '';
      const columns = [];
      const values = [];

      lines.forEach((line) => {
        line = line.trim();
        if (!line) return;

        // Extract table name
        if (line.toUpperCase().startsWith('UPDATE')) {
          const parts = line.split(/\s+/);
          tableName = parts[1];
          return;
        }

        // Handle inline SET
        if (line.toUpperCase().startsWith('SET ')) {
          line = line.replace(/^SET\s+/i, '').trim();
        }

        // Handle WHERE clause
        if (line.toUpperCase().startsWith('WHERE')) {
          const match = line.match(/WHERE\s+(\w+)\s*=\s*'?([^';]+)'?/i);
          if (match) {
            columns.push(match[1]);
            values.push(`'${match[2]}'`);
          }
          return;
        }

        // Handle key = value
        const match = line.match(/^(\w+)\s*=\s*(SYSDATE|'[^']*'|\d+)\s*,?$/i);
        if (match) {
          columns.push(match[1]);
          values.push(match[2].toUpperCase() === 'SYSDATE' ? 'SYSDATE' : match[2]);
        }
      });

      if (tableName && columns.length > 0 && values.length > 0) {
        finalOutput += `INSERT INTO ${tableName} (${columns.join(', ')})\nVALUES (${values.join(', ')});\nCOMMIT;\n\n`;
      }
    });

    setOutput(finalOutput.trim());
  };

  return (
    <div style={{ padding: '20px' }}>
      <h3>Multi-record SQL Update â†’ Insert Converter</h3>
      <textarea
        rows={20}
        cols={100}
        placeholder="Paste multiple UPDATE blocks here"
        value={input}
        onChange={(e) => setInput(e.target.value)}
      />
      <br />
      <button onClick={convertSql}>Convert to INSERTs</button>
      <h4>Converted INSERT Statements:</h4>
      <textarea
        rows={25}
        cols={100}
        value={output}
        readOnly
      />
    </div>
  );
};

export default SqlConverter;